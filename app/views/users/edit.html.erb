<!-- edit.html.erb -->

<h1>Edit Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(current_user) do |f| %>
      <%# render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :region %>
      <%= f.text_field :region %>

      <%= f.label :profile %>
      <%= f.text_area :profile %>

      <%= f.submit "Upedate my profile", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>